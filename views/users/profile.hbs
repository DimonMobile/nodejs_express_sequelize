<div class="row">
    <div class="col s12 l4">
        <div class="collection">
            <a href="#!" class="collection-item active waves-effect">Profile</a>
            <a href="#" class="collection-item waves-effect">Publications</a>
            <a href="#!" class="collection-item waves-effect">Messages</a>
            <a href="#" class="collection-item purple-text text-darken-4 waves-effect">Administration</a>
            {{#if isOwner}}
            <a href="#" class="collection-item red-text waves-effect">Logout</a>
            {{/if}}
        </div>
    </div>
    <div class="col s12 l8">
        {{#if user}}
        <div>
            <div class="center-align">
                <h3>{{user.nick}}</h3>
            </div>
        </div>
        <table>
            <tr>
                <td>Picture:</td>
                <td><img src="{{user.avatar}}" width="64" height="64" class="circle materialboxed" /></td>
            </tr>
            <tr>
                <td>Id</td>
                <td>{{user.id}}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>{{user.email}}</td>
            </tr>
            <tr>
                <td>Nickname</td>
                <td>{{user.nick}}</td>
            </tr>
            <tr>
                <td>Level:</td>
                <td>{{user.level}}</td>
            </tr>
        </table>
        {{#if isOwner}}
        <div class="center-align">
            <a href="#">change password</a> | <a href="#">change email</a> | <a href="#">update avatar</a>
        </div>
        {{/if}}
        {{else}}
        <h3>Not found</h3>
        {{/if}}
    </div>
</div>